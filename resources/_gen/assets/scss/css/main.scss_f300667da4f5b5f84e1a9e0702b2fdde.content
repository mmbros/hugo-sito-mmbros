html {
  box-sizing: border-box; }

*,
*::before,
*::after {
  box-sizing: inherit; }

html, body {
  height: 100%; }

/*
Page top sections:

  container
  - header
  - front
  - toc
  - body
  - footer

*/
.breadcrumb {
  list-style: none;
  margin: 0;
  padding: 0; }
  .breadcrumb li {
    display: inline;
    padding: 0;
    font-variant: small-caps;
    font-weight: bold;
    text-transform: lowercase;
    color: #128f80; }
    .breadcrumb li a {
      color: #052D5A;
      text-decoration: none; }
      .breadcrumb li a:hover {
        text-decoration: underline; }
  .breadcrumb li + li:before {
    padding: 4px;
    color: #ddd;
    content: "/"; }

.draft {
  display: inline-block;
  line-height: 1;
  font-size: 100%;
  font-weight: normal;
  border-radius: 10px;
  padding: 0.15em 0.2em;
  vertical-align: baseline; }

.draft {
  background-color: #ddd; }

.taxo-pages {
  border-collapse: separate;
  border-spacing: 0 10px; }
  .taxo-pages th {
    background-color: transparent;
    border: none;
    text-align: right;
    padding-right: 8px;
    border-right: 4px solid #c8e0fc;
    vertical-align: top; }
  .taxo-pages td {
    border: none;
    padding: 0 0 0 4px; }

.notaxo {
  font-style: italic;
  font-weight: normal; }

.ul-pages {
  list-style: none;
  margin: 0;
  padding: 0; }
  .ul-pages li {
    display: inline-block;
    margin: 0;
    padding: 0; }
  .ul-pages li:not(:last-child):after {
    color: #c8e0fc;
    content: "|";
    margin: 0;
    padding: 0 4px; }
  .ul-pages a {
    color: #305074;
    margin: 0;
    padding: 4px;
    text-decoration: none; }
    .ul-pages a:hover {
      background-color: #adfade;
      text-decoration: none; }

.taxo-count {
  list-style: none;
  margin: 0;
  padding: 0; }
  .taxo-count li {
    display: inline-block;
    margin: 0;
    padding: 0; }
  .taxo-count li:not(:last-child):after {
    color: #e0eefd;
    content: "|";
    margin: 0;
    padding: 0 4px; }
  .taxo-count a {
    color: #305074;
    margin: 0;
    padding: 4px;
    text-decoration: none; }
    .taxo-count a:hover {
      background-color: #adfade;
      text-decoration: none; }
  .taxo-count .badge {
    background-color: #e0eefd;
    border-radius: 6px;
    color: #5282b8;
    font-size: 70%;
    padding: 0 4px; }

/*
	front
		categories?
		title
		subtitle?
		description?
		info
			date
			reading-time
			tags*
*/
.front {
  color: #1ef0a5;
  background-color: #052D5A; }
  .front--categories {
    list-style: none;
    margin: 0;
    padding: 0;
    font-variant: small-caps;
    font-weight: bold;
    text-transform: lowercase; }
    .front--categories li {
      display: inline;
      padding: 0 1em 0 0; }
    .front--categories a {
      color: #ddd;
      text-decoration: none; }
      .front--categories a:hover {
        text-decoration: underline; }
  .front--title {
    margin-top: 0;
    color: #1ef0a5; }
  .front--subtitle {
    font-size: 50%;
    font-weight: normal;
    margin: 0; }
  .front--description {
    font-size: 1.3rem;
    font-style: italic;
    color: #ddd; }
  .front--info {
    font-size: 0.76923077rem;
    list-style: none;
    margin: 0;
    padding: 0;
    line-height: 3px;
    display: flex;
    color: #71859c; }
    .front--info li {
      border-left: 1px solid #052d5a;
      padding: 0 10px; }
      .front--info li:first-child {
        border: none;
        padding-left: 0; }
    .front--info time {
      color: #ddd;
      display: block; }

body {
  margin: 0;
  min-height: 100%;
  display: grid;
  grid-gap: 0;
  grid-template-columns: 1fr;
  grid-template-rows: auto auto auto 1fr auto;
  grid-template-areas: 'header' 'front' 'toc' 'body' 'footer';
  font-family: Helvetica, Arial, sans-serif;
  line-height: 1.4;
  background-color: #ddd;
  color: #305074;
  overflow-y: scroll; }

p,
ul,
ol,
li {
  line-height: 1.4;
  margin-bottom: 0.7rem;
  margin-top: 0; }

code:not([class]) {
  color: #516b88;
  background-color: rgba(5, 45, 90, 0.1);
  word-wrap: break-word;
  font-size: 1.2em; }

pre {
  background-color: rgba(5, 45, 90, 0.1);
  padding: 4px 1em; }

pre code:not([class]) {
  background-color: transparent; }

blockquote {
  background-color: rgba(5, 45, 90, 0.1);
  padding: .8em 1em .4em 1em;
  border-left: 1px solid #305074;
  font-style: italic; }

