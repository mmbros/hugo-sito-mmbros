/*
body > * {
	padding: $padding
}
*/
.header {
  grid-area: header;
  background-color: #1ef0a5;
  color: #052D5A; }

.front {
  grid-area: front; }
  .front h1 {
    color: #1ef0a5; }

.body {
  grid-area: body; }

.toc {
  grid-area: toc; }
  .toc--ancestors-or-self {
    list-style: none;
    padding-top: 20px;
    padding-left: 0;
    margin: 0;
    font-weight: bold; }
  .toc li {
    margin: 0; }
  .toc a {
    display: block;
    padding: .5em .3em;
    color: #305074; }
    .toc a:hover {
      background-color: #adfade;
      text-decoration: none; }

#TableOfContents ul {
  margin: 0;
  padding-left: 1.2em; }

.footer {
  grid-area: footer;
  background-color: #052D5A;
  color: #ddd; }

.header, .front, .toc, .body, .footer {
  margin: 0;
  padding: 1.4rem 20px; }

@media (min-width: 809px) and (max-width: 1199px) {
  .header, .front, .toc, .body, .footer {
    padding: 1.4rem calc(50% - 380px); } }

@media (min-width: 1200px) {
  body {
    grid-template-columns: 1fr 3fr;
    grid-template-rows: auto auto 1fr auto;
    grid-template-areas: 'header header' 'front  front' 'toc     body' 'footer footer'; }
  .toc--container {
    top: 0;
    position: sticky; } }

.subtitle {
  font-size: 76.92307692%;
  display: block; }

.cards {
  list-style: none;
  margin: 0;
  padding: 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(\min(20em, 100%), 1fr));
  grid-gap: 20px; }
  .cards h3 {
    margin-top: 0;
    padding-top: 0; }
    .cards h3 a:hover {
      color: #1ef0a5;
      text-decoration: none; }
  .cards li {
    background-color: #eee;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    margin: 0;
    padding: 1em; }
